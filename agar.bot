#name Agar
#author Tom Smeding

#page 0
	//`goto` is a faster `page`
	goto @page8

#page 8
page8:
buildloop:
	look ahead
	if ahead==0, @buildbot
	if (ahead&4)!=0, @wakemybot
	if (ahead&2)!=0, @killotherbot
buildloopend:
	rot 1
	goto @buildloop

buildbot:
	build 2
	trans 0, 0
	trans 8, 8
	trans 15, 15
wakemybot:
	shake-awake
	goto @buildloopend

killotherbot:
	sto a, 0
_loop:
	trans 15, a
	sto a, a+1
	if a!=16, @_loop
	shake-awake
	goto @buildloopend


#page 15
	suicide
